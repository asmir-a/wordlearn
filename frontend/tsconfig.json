{
  "compilerOptions": {
    "outDir": "./dist",
    "noImplicitAny": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "CommonJS",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "resolveJsonModule": true,
  },
  "include": [
    "webpack.config.ts",
    "./src/**/*"
  ]
}